<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:padding="5dp"
    android:background="@drawable/background">

    <jf.desarrollos.arroyitocomercial.Utilidades.RoundedLetterView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rlv_name_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        tools:visibility="visible"
        app:backgroundColorValue="@color/primary"
        app:titleColor="@android:color/white"
        app:titleSize="20dp"
        app:titleText="A"
        android:layout_gravity="top|left" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="@string/comercio"
        android:id="@+id/tv_name_holder"
        android:layout_toRightOf="@+id/rlv_name_view"
        android:layout_marginLeft="20dp"
        android:layout_toLeftOf="@+id/ivCall"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/ivCall"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@mipmap/ic_call_dark"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"/>
</RelativeLayout>